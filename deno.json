{
  "imports": {
    "@std/assert": "jsr:@std/assert@^0.222.1",
    "@std/html": "jsr:@std/html@^0.222.1",
    "@std/testing": "jsr:@std/testing@^0.222.1"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["prefer-const"],
      "include": ["no-undef", "no-const-assign"]
    }
  },
  "compilerOptions": {
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2
  },
  "tasks": {
    "doc": "jsdoc -c jsdoc.json -d build/docs ."
  }
}
