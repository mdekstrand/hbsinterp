{
  "imports": {
    "std/": "https://deno.land/std@0.209.0/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["prefer-const"],
      "include": ["no-undef", "no-const-assign"]
    }
  },
  "compilerOptions": {
    "lib": [
      "ES2020",
      "dom"
    ]
  },
  "fmt": {
    "lineWidth": 100,
    "indentWidth": 2
  },
  "tasks": {
    "doc": "jsdoc -c jsdoc.json -d build/docs ."
  }
}
